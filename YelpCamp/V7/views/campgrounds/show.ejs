<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info-1</li>
				<li class="list-group-item">Info-2</li>
				<li class="list-group-item">Info-3</li>
			</div>
			<p>
				<a class="size" href="/campgrounds">Back</a>
			</p>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="image-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">Price: $9</h4>
					<h1><a><%= campground.name %></a></h1>
					<p><%= campground.description %></p>
					<p>
						<em>Submitted By <strong><%= campground.author.username %></strong></em>
					</p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 Days Ago</span>
							<p>
								<%= comment.text %>
							</p>
						</div>	
					</div>	
				<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
